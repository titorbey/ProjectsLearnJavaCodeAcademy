public class Droid{
  //instance fields
  int batteryLevel;
  String name;

  //constructor
  public Droid(String droidName){
    name = droidName;
  }

  //methods
  //droid says hello
  public String toString(){
    return "Hello, I'm the droid: "+name;
  }
  //sets initial battery level
    public void setBatteryLevel(){
    batteryLevel = 100;
    System.out.println(name+"'s initial battery level is: "+batteryLevel);
  }
  //droid performs task
  public void performTask(String task){
    System.out.println(name+" is performing task: "+task);
    batteryLevel = batteryLevel-10;
    System.out.println("After performing this task, "+name+"'s battery level is: "+batteryLevel);
  }

  //main method
  public static void main(String [] args){
    Droid Codey = new Droid("Tiba");
    //droid says hello
    System.out.println(Codey);
    // droid's initial battery level
    Codey.setBatteryLevel();
    //droid performs task dancing
    Codey.performTask("dancing");
    //droid performs task singing
    Codey.performTask("singing");
    //droid performs task cleaning
    Codey.performTask("cleaning");
  }
}
